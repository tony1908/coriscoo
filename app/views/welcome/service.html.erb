
    <section id="recent-works">
        <div class="container">
            <div class="center wow fadeInDown">
           
                <h2 class="text-center"><%= @title %></h2>
                
            </div>
			 
            <div class="row">
            <% @service.each do |service| %> 
                <div class="col-xs-12 col-sm-4 col-md-3">
                <h3><a href="#"><%= service.title %></a> </h3>
                    <div class="recent-work-wrap">
                        <img class="img_ca" src="<%=service.photo %>" alt="">

                        <div class="overlay">
                            <div class="recent-work-inner">
                                <% if service.kind_id == 1 %>
                                <h3><a href="#">Commercial</a> </h3>
                                <% elsif service.kind_id == 2 %>
                                <h3><a href="#">Residential</a> </h3>
                                <% else%>
                                <% end %>
                                <p><%=service.description %></p>
                                <a class="preview" href="<%=service.photo %>" rel="prettyPhoto"><i class="fa fa-eye"></i> View</a>
                            </div> 
                        </div>
                    </div>
                </div>   
				<% end %>
