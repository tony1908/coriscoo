<div class="container">
	<h2>Service Request</h2>
	
  <%= form_for @user,:html => {:class => "form-horizontal"}, url: url_for( action: 'emailSend'), method: :post do  |f| %>
      <div class="form-group">
        <%= f.label :first, "First name:", class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :first, class: "form-control" , :placeholder => "First name"%>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :last, "Last name:", class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :last, class: "form-control", :placeholder => "Last name" %>
        </div>
      </div>

        <div class="form-group">
        <%= f.label :phone, "Phone:", class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :phone, class: "form-control", :placeholder => "Phone" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :email, "Email:", class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.email_field :email, class: "form-control" , :placeholder => "Email"%>
        </div>
      </div>


        <div class="form-group">
        <%= f.label :address, "Service Request Address:", class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :address, class: "form-control", :placeholder => "Service  Request Address" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :description, "Description:", class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_area :description, class: "form-control", size: "20x20", :placeholder => "Description" %>
        </div>
      </div>

  
      <%= f.submit "Submit", class: "btn btn-default btn-primary center-block" %>  
      <br><br>
 <% end %>
</div>


