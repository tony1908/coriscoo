<div class="container">
<div class="row">
	<div class="col-md-6"><h2>Fill the form and then upload it:</h2></div>
	<div class="col-md-6"><%= link_to 'Download Now' ,'/employmentform.pdf', class: "btn btn-default btn-primary " %></div>
</div>
<div class="row">

<h2>Service Request</h2>
	
  <%= form_for @employment2,:html => {:class => "form-horizontal"}, url: url_for( action: 'formEmployment'), method: :post do  |f| %>
      <div class="form-group">
        <%= f.label :first, "First name:", class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: "form-control" , :placeholder => "Name"%>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :employment, "Employment:", class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.file_field :pdf%>
        </div>
      </div>


  
      <%= f.submit "Submit", class: "btn btn-default btn-primary center-block" %>  
      <br><br>
 <% end %>
</div>
</div>
